# AML-100 Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: Hyperliquid API credentials
# ============================================
HYPERLIQUID_API_KEY=your_api_key_here
HYPERLIQUID_API_SECRET=your_api_secret_here
HYPERLIQUID_WALLET_ADDRESS=0x_your_wallet_address_here

# ============================================
# OPTIONAL: Trading Configuration
# ============================================

# Initial capital for backtest/paper trading (default: 1000)
AML_INITIAL_CAPITAL=1000

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
AML_LOG_LEVEL=INFO

# ============================================
# OPTIONAL: Directory Paths (defaults shown)
# ============================================
# AML_DATA_DIR=./data
# AML_MODEL_DIR=./models
# AML_LOG_DIR=./logs
